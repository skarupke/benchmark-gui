        {
            "name": "(gdb) Launch Address Sanitizer",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build-address-sanitizer-debug/main",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build-address-sanitizer-debug/",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
